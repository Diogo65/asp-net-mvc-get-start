@model IEnumerable<PortalDeNoticias.Models.Noticia>
@*IEnurable uma coleção de objetos do tipo Noticia*@

@{
    ViewBag.Title = "Index";
}

@foreach (var item in Model) { //Um laço de iteração sobre a coleção Model 
   <div class="panel panel-default">
       <div class="panel-heading">
           <p class="panel-title">@item.Titulo</p>
       </div>
       <div class="panel-body">
           <p>@item.Conteudo ...</p>
       </div>
       <div class="panel-footer">
           @Html.ActionLink("Ler Mais", "Details", new { id = item.Id}, new { @class="btn btn-default"})
       </div>
   </div>
}

